{
  "meta": {
    "name": "bcif_generic_mapping_v1",
    "created": "2025-08-18 05:03:03",
    "pdf_template": "Fillable_CCC_BCIF.pdf",
    "notes": [
      "Set ALL checkboxes OFF first, then enable checkboxes whose tokens match.",
      "Regex are case-insensitive. Prefer 4DR over 2DR when both detected.",
      "If multiple matches occur, use the first non-empty capture."
    ]
  },
  "text_fields": {
    "Company": {
      "patterns": [
        "(?m)^For:\\s*([^\\n]+)$",
        "(?m)^Company:\\s*([^\\n]+)$"
      ]
    },
    "Claim Number": {
      "patterns": [
        "Claim #:\\s*([A-Z0-9\\-\\/]+)"
      ]
    },
    "Policy Number": {
      "patterns": [
        "Policy #:\\s*([A-Z0-9\\-\\/]+)"
      ]
    },
    "Appraiser First Name": {
      "patterns": [
        "Written By:\\s*([A-Za-z]+)"
      ]
    },
    "Appraiser Last Name": {
      "patterns": [
        "Written By:\\s*[A-Za-z]+\\s+([A-Za-z\\-']+)"
      ]
    },
    "Adjuster First Name": {
      "patterns": [
        "Adjuster:\\s*([A-Za-z\\-']+),\\s*([A-Za-z\\-']+)"
      ],
      "transform": "second_group"
    },
    "Adjuster Last Name": {
      "patterns": [
        "Adjuster:\\s*([A-Za-z\\-']+),\\s*([A-Za-z\\-']+)"
      ],
      "transform": "first_group"
    },
    "Adjuster Contact Number": {
      "patterns": [
        "(\\(\\d{3}\\)\\s*\\d{3}\\-\\d{4})",
        "(\\d{3}\\-\\d{3}\\-\\d{4})"
      ]
    },
    "Owner First Name": {
      "patterns": [
        "Owner:\\s*([A-Z]+),\\s*([A-Z]+)",
        "Owner:\\s*([A-Z'\\-]+),\\s*([A-Z'\\-]+)",
        "Owner:\\s*([^,\\n]+?)\\s+(?:Job Number|Policy)"
      ],
      "transform": "second_group_title"
    },
    "Owner Last Name": {
      "patterns": [
        "Owner:\\s*([A-Z]+),\\s*([A-Z]+)",
        "Owner:\\s*([A-Z'\\-]+),\\s*([A-Z'\\-]+)",
        "Owner:\\s*([A-Z'\\-]+),"
      ],
      "transform": "first_group_title"
    },
    "Insured First Name": {
      "patterns": [
        "Insured:\\s*([A-Z]+),\\s*([A-Z]+)",
        "Insured:\\s*([A-Z'\\-]+),\\s*([A-Z'\\-]+)",
        "Insured:[\\s]*([A-Z'\\-]+),[\\s]*([A-Z'\\-]+)[\\s]*(?:Policy|Claim)"
      ],
      "transform": "second_group_title"
    },
    "Insured Last Name": {
      "patterns": [
        "Insured:\\s*([A-Z]+),\\s*([A-Z]+)",
        "Insured:\\s*([A-Z'\\-]+),\\s*([A-Z'\\-]+)",
        "Insured:[\\s]*([A-Z'\\-]+),"
      ],
      "transform": "first_group_title"
    },
    "VIN": {
      "patterns": [
        "VIN:\\s*([A-HJ-NPR-Z0-9]{11,17})"
      ]
    },
    "Year": {
      "patterns": [
        "(?m)^Year:\\s*(\\d{4})$",
        "VEHICLE[\\s\\S]*?(20\\d{2})\\s+[A-Z]{3,12}\\s+",
        "^(20\\d{2})\\s+[A-Z]{3,12}\\s+[A-Za-z0-9]+",
        "^(19\\d{2})\\s+[A-Z]{3,12}\\s+[A-Za-z0-9]+"
      ]
    },
    "Make": {
      "patterns": [
        "(?m)^Make:\\s*([^\\n]+)$",
        "VEHICLE[\\s\\S]*?20\\d{2}\\s+(CHEV|CHEVR|FORD|TOYO|TOYOTA|HOND|HONDA|NISS|NISSAN|HYUN|HYUNDAI|MAZD|MAZDA|SUBR|SUBARU|BMW|AUDI|MERC|MERCEDES|VOLK|VOLKSWAGEN|JEEP|CHRY|CHRYSLER|DODG|DODGE|BUIC|BUICK|CADI|CADILLAC|GMC|LINC|LINCOLN|ACUR|ACURA|LEXU|LEXUS|INFI|INFINITI|VOLV|VOLVO|KIA|MITSU|SUZUKI|ISUZU|FIAT|ALFA|MINI|TESLA|JAGUAR|LAND|ROVER|PORSCHE|FERRARI|LAMBORGHINI|MASERATI|BENTLEY|ROLLS)\\s+",
        "^20\\d{2}\\s+([A-Z]{3,12})\\s+[A-Za-z0-9]+"
      ]
    },
    "Model": {
      "patterns": [
        "(?m)^Model:\\s*([^\\n]+)$",
        "VEHICLE[\\s\\S]*?20\\d{2}\\s+[A-Z]{3,12}\\s+([A-Za-z0-9\\-]+)",
        "^20\\d{2}\\s+[A-Z]{3,12}\\s+([A-Za-z0-9\\-]+)",
        "^19\\d{2}\\s+[A-Z]{3,12}\\s+([A-Za-z0-9\\-]+)"
      ]
    },
    "Trim": {
      "patterns": [
        "\\b(?:Model|Series|Trim):\\s*([A-Za-z0-9\\-]+)",
        "\\b[A-Za-z0-9]+\\s+([A-Za-z0-9\\-]+)\\s+(?:FWD|AWD|4WD)"
      ]
    },
    "Cylinders": {
      "compose": {
        "cyl_from": [
          "\\b([46]|V6|V8)\\b",
          "(\\d)\\-cyl"
        ],
        "disp_from": [
          "\\b([0-9]\\.[0-9]L)\\b",
          "\\b([0-9]\\.[0-9]{1,2})\\s*L\\b"
        ],
        "format": "{cyl}-{disp}",
        "normalize": {
          "V6": "6",
          "V8": "8"
        }
      }
    },
    "Odometer (mi)": {
      "patterns": [
        "Odometer:\\s*([\\d,]+)"
      ],
      "transform": "digits_only"
    },
    "Date of loss (mm/dd/yyyy)": {
      "patterns": [
        "Date of Loss:\\s*([0-9]{1,2}/[0-9]{1,2}/[0-9]{2,4})"
      ]
    },
    "Type of Loss": {
      "patterns": [
        "Type of Loss:\\s*([A-Za-z ]+)"
      ]
    },
    "Loss State": {
      "patterns": [
        "Loss Location:\\s*[^,]+,\\s*([A-Z]{2})",
        "Inspection Location:[\\s\\S]*?([A-Z]{2})\\s*\\d{5}",
        "State:\\s*([A-Z]{2})\\s*Condition",
        "\\b([A-Z]{2})\\s*\\d{5}\\s*\\(",
        "\\b([A-Z]{2})\\s*\\d{5}\\s*Other",
        "\\b([A-Z]{2})\\s*\\d{5}\\b"
      ]
    },
    "Loss ZIP Code": {
      "patterns": [
        "Inspection Location:[\\s\\S]*?[A-Z]{2}\\s*([0-9]{5})",
        "[A-Z]{2}\\s*([0-9]{5})\\s*\\(",
        "[A-Z]{2}\\s*([0-9]{5})\\s*Other",
        "\\b([0-9]{5})(?:\\-\\d{4})?\\b"
      ]
    }
  },
